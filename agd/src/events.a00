IF COLLISION 1   
    ;Esto hace un efecto de explosión
    IF P = 0
        SOUND 5
    ELSE
        Beep 70
    ENDIF
   
    ;Vamos a la bala
    OTHER
        ;Si es una bala del boss
        IF SETTINGA = 1
            ;El evento Killplayer hace varias
            KILL
        ;Si la bala es del player
        ELSE
            ;Activamos que el player pueda crar más balas
            LET D = 1
        ENDIF
    ENDSPRITE
ENDIF




